<?xml version="1.0"?>
  <table name="stg_tournaments" type="normal">
  <columns>
    <column name="id"                type="varchar2(64)"/>
    <column name="name"              type="varchar2(128)"/>
    <column name="year"              type="number(4)"/>
    <column name="code"              type="varchar2(48)"/>
    <column name="url"               type="varchar2(256)"/>
    <column name="slug"              type="varchar2(128)"/>
    <column name="location"          type="varchar2(128)"/>
    <column name="sgl_draw_url"      type="varchar2(256)"/>
    <column name="sgl_pdf_url"       type="varchar2(256)"/>
    <column name="indoor_outdoor"    type="varchar2(8)"/>
    <column name="surface"           type="varchar2(8)"/>
    <column name="series"            type="varchar2(8)"/>
    <column name="start_dtm"         type="varchar2(10)"/>
    <column name="finish_dtm"        type="varchar2(10)"/>
    <column name="sgl_draw_qty"      type="number(4)"/>
    <column name="dbl_draw_qty"      type="number(4)"/>
    <column name="prize_money"       type="number(10)"/>
    <column name="prize_currency"    type="varchar2(16)"/>
    <column name="country_name"      type="varchar2(256)"/>
    <column name="country_code"      type="varchar2(3)"/>
  </columns>
</table>