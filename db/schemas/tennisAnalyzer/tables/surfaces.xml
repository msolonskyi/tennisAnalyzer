<?xml version="1.0"?>
  <table name="surfaces" type="normal">
  <columns>
    <column name="id"   type="number(12)"  nullable="n"/>
    <column name="name" type="varchar2(8)" nullable="n"/>
  </columns>
  <constraints>
    <constraint name="pk_surfaces"  type="primary key" columns_list="id"/>
    <constraint name="unq_surfaces" type="unique" columns_list="name"/>
  </constraints>
</table>
